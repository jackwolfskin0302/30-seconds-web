{
  "rootDir": "../../",
  "transform": {
    "^.+\\.(js|jsx)?$": "babel-jest",
    "^.+\\.(css|less|scss)$": "jest-transform-stub"
  },
  "testEnvironment": "jest-environment-jsdom-fourteen",
  "moduleFileExtensions": ["js", "jsx", "json"],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "testPathIgnorePatterns": [
    "content/sources",
    ".cache",
    "public"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!(gatsby)/)"
  ],
  "globals": {
    "__PATH_PREFIX__": "",
    "__BASE_PATH__": ""
  },
  "testURL": "https://localhost",
  "testMatch": [
    "**/?(*.)+(test).[jt]s?(x)"
  ]
}
